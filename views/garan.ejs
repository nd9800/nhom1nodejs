        </div>
    </div>
</section>

<script type="text/javascript">
    $("#MB_close, #MB_overlay").on("click",function() {
        $(".MB_overlay, .MB_popup").removeClass("active");
    });

    function productOption(e) {
        $('#TenSp').text(e.name);
        $('#product-image-inner img').attr('src', e.image);

        var subGroup = e.sub;
        $('#sub-group').empty();
        subGroup.forEach(function(sub){
            var appendStr = '<label class="checkbox-style checkbox-border">\n'+
                '<input type="checkbox" name="name1" value="value1">\n'+
                '<span class="label">\n'+
                sub.name +
                '<span class="price-notice">\n'+
                '<span class="price">\n'+
                sub.price +
                '</span>\n'+
                '</span>'+
                '</span class=input_qty>\n'+
                '<input type="number" pattern="[0-9]" name="sub_qty" id="qtySub" maxlength="2" value="1" title="Số lượng" class="input-sub">\n'+
                '</span>\n'
            '</span>\n'+
            '</label>';
            $('#sub-group').append(appendStr);
        });
        $(".MB_overlay, .MB_popup").addClass("active");
    }
</script>

